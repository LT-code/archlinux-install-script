{
	"install": {
		"ansible_local": 1,
		"on_usb_key": 0
	},
	"machine": {
		"name": "ArchLinux",
		"zoneinfo": "Europe/Paris",
		"lang": "en_US",
		"keyboard": "us"
	},
	"disk": {
		"name": "/dev/xxx",
		"partitioning": 1,
		"prefix_num": "p",
		"wipe": 1
	},
	"partitions": [
		{ "size": "400M", "type": "vfat", "path": "/boot"},
		{ "size": "ALL", "type": "lvm", "vol_name": "vol_root",
			"luks_password": "password",
			"partitions": [
				{"name": "swap", "type": "swap", "size": "8G"},
				{"name": "root", "type": "ext4", "size": "20G", "path": "/"},
				{"name": "var", "type": "ext4", "size": "25G", "path": "/var"},
				{"name": "home", "type": "ext4", "size": "ALL", "path": "/home"}
			]
		}
	]
}
